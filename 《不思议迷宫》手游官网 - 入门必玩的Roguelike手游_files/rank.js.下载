function getRank() {
	$
			.ajax( {
				url : '/common/rank_list/getMapRank.php',
				data : {
					map_id : $(".main_rank_choose input").data('code'),
					size : 5
				},
				dataType : 'json',
				type : 'post',
				success : function(data) {
					if (data.status == 'success') {
						if (data.message.length > 0) {
							var html = '';
							for ( var i = 0; i < data.message.length; i++) {
								var rank = data.message[i];
								html += '<li>';
								if (i<=2) {
									html += '<i class="img icon_trophy_' + i + '"></i>';
								} else {
									html += '<i>' + (i+1) + '</i>';
								}
								html += '<span>' + rank.name + '</span>';
								html += '<em>' + rank.layer + 'å±‚</em>';
								html += '</li>';
							}
							$('.main_rank_list').empty();
							$('.main_rank_list').append(html);							
						}
					}
				}
			});
}

getRank();